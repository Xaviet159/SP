{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Hello</h1>
        <div class="row mt-4">
        {% for project in projects %}
            <div class="col">
                <div class="card">
                    <img src="https://picsum.photos/180/140" class="img-fluid" alt="Image du projet">
                    <div class="card-body">
                        <h4 class="card-title"> {{ project.name }}</h4>
                        <p class="card-text">{{ project.description }}</p>
                        <a href="{{path('project_show', {'id':project.id})}}" class="btn btn-primary btn-sm">Details</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
