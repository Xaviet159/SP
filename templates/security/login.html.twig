{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container center mt-5">
    <div class="col-5 mx-auto">
     <h1>Connexion</h1>
        {% if error %}
            <div class="alert alert-danger">
            {{ error.message }}
            </div>
        {% endif %}

        {{ form_start(formView) }}
                {{ form_widget(formView) }}      
                <button type="submit" class="btn-sm">Connexion</button>
                <button class="btn-sm" href="{{ path('register') }}">Inscription</button>           
        {{ form_end(formView) }}   
    </div> 
</div>

{% endblock %}
