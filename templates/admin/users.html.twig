{% extends "baseAdmin.html.twig" %}

{% block body %}
  <div class="container mt-5">
    <table class="table table-hover mt-5">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Nom</th>
          <th scope="col">Email</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
            <tr class="table-info">
              <th scope="row">{{user.id}}</th>
              <td>{{user.FullName}}</td>
              <td>{{user.email}}</td>
               <td>
               <a href="{{path('admin_user_edit', {'id':user.id})}}" ><ion-icon name="pencil-outline"></ion-icon></a>
               <a href="{{path('admin_user_delete', {'id':user.id})}}" ><ion-icon name="trash-outline"></ion-icon></a>
               </td> 
            </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}